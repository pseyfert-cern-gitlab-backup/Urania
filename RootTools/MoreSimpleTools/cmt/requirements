# define component library link options
#============================================================================
macro_append MoreSimpleTools_linkopts "-funroll-all-loops -g -Wall -lTreePlayer -lGui $(shell $(ROOTSYS)/bin/root-config --cflags --libs --ldflags --glibs)"# <$"
macro_append MoreSimpleToolsOptimiser_linkopts "-funroll-all-loops -g -Wall -lTreePlayer -lGui -lMoreSimpleTools $(shell $(ROOTSYS)/bin/root-config --cflags --libs --ldflags --glibs)"# <$"
macro_append MoreSimpleToolsShaper_linkopts "-funroll-all-loops -g -Wall -lTreePlayer -lGui $(shell $(ROOTSYS)/bin/root-config --cflags --libs --ldflags --glibs)"# <$"
#macro_append MoreSimpleToolsStripColumns_linkopts "-funroll-all-loops -g -Wall -lTreePlayer -lGui $(shell $(ROOTSYS)/bin/root-config --cflags --libs --ldflags --glibs)"# <$"
macro_append MoreSimpleToolsOptimiser_dependencies " MoreSimpleTools "
