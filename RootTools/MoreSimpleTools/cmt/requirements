private
  use   GaudiPolicy     v*
end_private

use   ROOT            v*    LCG_Interfaces
use   SimpleTools     v*    RootTools

# Component library building rule
#============================================================================


library              MoreSimpleTools    ../src/*.cpp 
application          MoreSimpleToolsOptimiser    ../src/optimiser.cc ../src/*.cpp 
application          MoreSimpleToolsShaper       ../src/tupleshaper.cc
#application          MoreSimpleToolsStripColumns ../src/stripcolumns.cc

#apply_pattern    component_library library=MoreSimpleTools


