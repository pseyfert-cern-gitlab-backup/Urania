private
# genconfuser.py cannot be used here
# Note: the tag must be set before including GaudiPolicy
apply_tag skip_genconfuser
end_private
use   GaudiPolicy         v*
use   ROOT                v*    LCG_Interfaces
use   Boost               v*    LCG_Interfaces
use   PIDPerfTools        v*    PIDCalib

#macro_append ROOT_linkopts " -lFoam -lMathMore -lRooFitCore"

apply_pattern install_more_includes more=PIDPerfScripts

#============================================================================
# Define environmental variables used by the scripts
#
# NB. CALIBDATAURLPROTOCOL and CALIBDATAURLQUERY are optional variables
# that set the URL protocol query. Typically, these are only needed for
# certain remote filesystems such as CASTOR/EOS.
#
# For CERN access, CALIBDATAURLPROTOCOL should be set to 'root' (to use the
# XROOTD protocol) and CALIBDATAURLQUERY should be set to 'svcClass=lhcbuser'
# (to use the service class for grid user files)
# In addition, the 'DATASTORE' variables should be prepended with
# 'castorlhcb.cern.ch/'
#
#------------------------------------------------------------------------------
# default for CERN access (S20r1 and later)
set CALIBDATAURLPROTOCOL root
set CALIBDATAURLQUERY svcClass=lhcbuser
set CALIBDATASTORE castorlhcb.cern.ch//castor/cern.ch/grid/lhcb/user/p/phunt/CalibData
set CALIBREFDATASTORE castorlhcb.cern.ch//castor/cern.ch/grid/lhcb/user/p/phunt/CalibData
set MUONCALIBDATASTORE castorlhcb.cern.ch//castor/cern.ch/grid/lhcb/user/p/phunt/CalibData
set MUONCALIBREFDATASTORE castorlhcb.cern.ch//castor/cern.ch/grid/lhcb/user/p/phunt/CalibData
#------------------------------------------------------------------------------
#
